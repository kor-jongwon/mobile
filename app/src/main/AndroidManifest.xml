<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="33">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <meta-data
                android:name="android.app.lib_name"
                android:value="로그인 화면" />
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="회원가입 화면" >
        </activity>
        <activity
            android:name=".SignUpCongratulationsActivity"
            android:label="회원가입 성공화면" >
        </activity>
        <activity
            android:name=".FindIdActivity"
            android:label="아아디 찾기" >
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:label="비밀번호 찾기" >
        </activity>
        <activity android:name=".HomeActivity"
            android:label="Home">
            <!-- 필요한 인텐트 필터 또는 설정 추가 -->
        </activity>
        <activity
            android:name=".RegisterPlantActivity"
            android:label="식물 등록" >
        </activity>
        <activity android:name=".SensorRegisterActivity">
            <!-- intent-filter 및 다른 설정 (선택 사항) -->
        </activity>

        <activity android:name=".SensorControlActivity">
            <!-- intent-filter 및 다른 설정 (선택 사항) -->
        </activity>


        <!-- 아래의 receiver 요소를 추가합니다. -->
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementInstallReferrerReceiver"
            android:exported="true"
            tools:node="replace">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
