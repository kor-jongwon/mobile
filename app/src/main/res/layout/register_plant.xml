<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:clickable="true"
        android:onClick="selectImage"
        android:src="@drawable/register_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물 이름 *"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/plant_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_edittext"
        android:hint="예)사과나무"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#A0A0A0"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/plant_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="심은 날짜 *"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/date_picker_btn"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:text="달력"
        app:layout_constraintTop_toTopOf="@+id/plant_date"
        app:layout_constraintStart_toEndOf="@+id/plant_date"
        app:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/plant_date_text_view"
        android:layout_width="373dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/white_edittext"
        android:hint="YYYY/MM/DD"
        android:textColorHint="#A0A0A0"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_date" />

    <Button
        android:id="@+id/button"
        android:layout_width="373dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:background="#808080"
        android:clickable="false"
        android:text="완료"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/plant_date_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
