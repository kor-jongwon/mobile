<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:background="@drawable/sensor_register_list">

    <!-- 이미지 뷰 -->
    <ImageView
        android:id="@+id/sensorImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_plant_img"
        android:scaleType="centerCrop" />

    <!-- 센서 정보를 표시할 수 있는 레이아웃 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 센서 이름 -->
        <TextView
            android:id="@+id/sensor_register_editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Sensor Name"
            android:textSize="18sp" />

        <!-- 센서 정보 등 다른 텍스트 필드들 추가 -->
        <!-- 예시: -->
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Information"
            android:textSize="14sp" />
        -->

    </LinearLayout>
</LinearLayout>
